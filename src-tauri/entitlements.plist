<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <!-- Allow JIT compilation (required for web content rendering) -->
  <key>com.apple.security.cs.allow-jit</key>
  <true/>

  <!-- Allow unsigned executable memory (required for some web features) -->
  <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
  <true/>

  <!-- Disable library validation (allows loading framework libraries) -->
  <key>com.apple.security.cs.disable-library-validation</key>
  <true/>

  <!-- Allow sending Apple events (for macOS automation) -->
  <key>com.apple.security.automation.apple-events</key>
  <true/>

  <!-- Network client access (required for updates and AI features) -->
  <key>com.apple.security.network.client</key>
  <true/>

  <!-- Audio input access (for DJ app audio analysis features) -->
  <key>com.apple.security.device.audio-input</key>
  <true/>

  <!-- File system access to user-selected files -->
  <key>com.apple.security.files.user-selected.read-write</key>
  <true/>

  <!-- Allow file downloads (for update downloads) -->
  <key>com.apple.security.files.downloads.read-write</key>
  <true/>
</dict>
</plist>
