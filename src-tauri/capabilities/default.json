{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window and mini player",
  "windows": ["main", "mini-player"],
  "permissions": [
    "core:default",
    "core:path:default",
    "core:webview:allow-create-webview-window",
    "core:webview:allow-set-webview-focus",
    "opener:default",
    "dialog:default",
    "dialog:allow-open",
    "updater:default",
    "updater:allow-check",
    "process:allow-restart"
  ]
}
