{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "recodeck",
  "version": "0.1.0",
  "identifier": "com.nemanjamarjanovic.recodeck",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "recodeck",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; media-src 'self' stream: http: https: blob:"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": "v1Compatible",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/YOURUSERNAME/RecoDeck/releases/latest/download/latest.json"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEYyMzI4M0YzQUVBQTYxQkYKUldTL1lhcXU4NE15OHRUSDhBT3BOaVhJdUsvWWZhd1JVWWhWS2tTdjFCK0VMM0N2U0NvSWp5bWgK"
    }
  }
}